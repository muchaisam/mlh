<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mlh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="payBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="otpBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/blue_btn_bg_color</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="pinButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/blue_btn_bg_color</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="otpHeaderStyle">
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/teal_700</item>
    </style>

    <style name="pinHeaderStyle">
        <item name="android:background">@color/teal_200</item>
    </style>

    <style name="paymentTileStyle">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="paymentTileTextStyle">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="paymentTileDividerStyle">
        <item name="android:background">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTheme" parent="RaveAppTheme.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="OTPButtonStyle">@style/otpBtnStyle</item>
        <item name="PayButtonStyle">@style/payBtnStyle</item>
        <item name="PinButtonStyle">@style/pinButtonStyle</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyle</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle</item>
        <item name="PaymentTileStyle">@style/paymentTileStyle</item>
        <item name="PaymentTileTextStyle">@style/paymentTileTextStyle</item>
        <item name="PaymentTileDividerStyle">@style/paymentTileDividerStyle</item>
    </style>
</resources>