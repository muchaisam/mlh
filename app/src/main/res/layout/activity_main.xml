<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingTop="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfheavy"
                android:text="@+id/greetings"
                android:textColor="#3f9dff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/moneey" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="90"
                                        android:fontFamily="@font/sfmedium"
                                        android:textColor="#3f9dff"
                                        android:text="@string/send"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/sfbold"
                                    android:text="@string/seaw"
                                    android:textColor="#3f9dff"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16sp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/send" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:fontFamily="@font/sfmedium"
                                        android:text="5"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16sp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/send" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:fontFamily="@font/sfbold"
                                        android:text="4"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16sp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/pay" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:fontFamily="@font/sfheavy"
                                        android:text="3"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    android:layout_marginBottom="8dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/moneey" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="100">

                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sfmedium"
                                        android:text="@string/k"
                                        android:textColor="#3f9dff"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignEnd="@+id/textView1"
                                        android:layout_marginEnd="-48dp"
                                        android:fontFamily="@font/sfheavy"
                                        android:text="@string/pd"
                                        android:textColor="#3f9dff"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/transfer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/sfmedium"
                                        android:padding="8dp"
                                        android:text="@string/send"
                                        android:textColor="#3f9dff"
                                        android:textSize="16sp" />

                                </RelativeLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card1"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal"
                                    android:weightSum="100">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="90"
                                        android:fontFamily="@font/sfmedium"
                                        android:text="@string/rc"
                                        android:textColor="#3f9dff"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/sfbold"
                                    android:text="@string/raa"
                                    android:textColor="#3f9dff"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16sp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/send" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:fontFamily="@font/sfmedium"
                                        android:text="5"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16sp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/send" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:fontFamily="@font/sfbold"
                                        android:text="4"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16sp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/pay" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="6dp"
                                        android:fontFamily="@font/sfheavy"
                                        android:text="3"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    android:layout_marginBottom="8dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/reques" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="100">

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sfmedium"
                                        android:text="@string/k"
                                        android:textColor="#3f9dff"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignEnd="@+id/textView2"
                                        android:layout_marginEnd="-48dp"
                                        android:fontFamily="@font/sfheavy"
                                        android:text="@string/pd"
                                        android:textColor="#3f9dff"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/request"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/sfmedium"
                                        android:padding="8dp"
                                        android:text="@string/rc"
                                        android:textColor="#3f9dff"
                                        android:textSize="16sp" />

                                </RelativeLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/trending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/sfheavy"
                    android:text="@string/tc"
                    android:textColor="#3f9dff"
                    app:layout_constraintBottom_toTopOf="@id/scroll"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <LinearLayout
                        android:id="@+id/netflix"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_header"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:src="@drawable/netf"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="110dp"
                            android:fontFamily="@font/sfbold"
                            android:text="Amount : "
                            android:textColor="#3f9dff"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/sfmedium"
                            android:text="Ksh 1500"
                            android:textColor="#3f9dff"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zoom"
                        android:layout_below="@+id/netflix"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_header"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:src="@drawable/zoom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="110dp"
                            android:fontFamily="@font/sfbold"
                            android:text="Amount : "
                            android:textColor="#3f9dff"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/sfmedium"
                            android:text="Ksh 1500"
                            android:textColor="#3f9dff"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linkedin"
                        android:layout_below="@+id/zoom"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_header"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:src="@drawable/linkedi"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="110dp"
                            android:fontFamily="@font/sfbold"
                            android:text="Amount : "
                            android:textColor="#3f9dff"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/sfmedium"
                            android:text="Ksh 1500"
                            android:textColor="#3f9dff"
                            android:textSize="18sp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


<!--        BottomNavigation-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>